<div class="wrapper">
	<form asp-action="PayOrder">
	<div class="h5 large">Billing Address</div>
	<div class="row">
		<div class="col-lg-6 col-md-8 col-sm-10 offset-lg-0 offset-md-2 offset-sm-1">
			<div class="mobile h5">Billing Address</div>
			<div id="details" class="bg-white rounded pb-5">
		
					<div class="form-group"> <label class="text-muted">Name</label> <input asp-for="@Model.CustOrderHeader.Name"  class="form-control" required> </div>
		
					<div class="row">
						<div class="col-lg-6">
							<div class="form-group">
								<label>City</label>
								<div class="d-flex jusify-content-start align-items-center rounded p-2"> <input asp-for="@Model.CustOrderHeader.City" required> <span class="fas fa-check text-success pr-2"></span> </div>
							</div>
						</div>
						<div class="col-lg-6">
							<div class="form-group">
								<label>Phone Number</label>
								<div class="d-flex jusify-content-start align-items-center rounded p-2"> <input asp-for="@Model.CustOrderHeader.PhoneNumber" required> <span class="fas fa-check text-success pr-2"></span> </div>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12">
							<div class="form-group">
								<label>Address</label>
								<div class="d-flex jusify-content-start align-items-center rounded p-2"> <input asp-for="@Model.CustOrderHeader.Address" required> <span class="fas fa-check text-success pr-2"></span> </div>
							</div>
						</div>
				@*<input type="checkbox" checked> <label>Shipping address is same as billing</label>*@
			</div>
		</div>

		</div>	

		<div class="col-lg-6 col-md-8 col-sm-10 offset-lg-0 offset-md-2 offset-sm-1 pt-lg-0 pt-3">
			<div id="cart" class="bg-white rounded">
				<div class="d-flex justify-content-between align-items-center">
					<div class="h6">Cart Summary</div>
					<div class="h6"> <a href="/Customer/Cart/Index">Edit</a> </div>
				</div>
				@foreach(var item in Model.Carts)
				{
			
					<div class="d-flex jusitfy-content-between align-items-center pt-3 pb-2 border-bottom">
						<div class="item pr-2">
							<img src="~/Files//Images/@item.Product.ImageUrl" alt="" width="80" height="80">
							
							<div class="number">@item.Count</div>
							<input hidden asp-for="@item.Count"/>
						</div>
						<div class="d-flex flex-column px-3">
							<b class="h5">@item.Product.Name</b> <a href="#" class="h5 text-primary"></a>
						
						</div>
						<div class="ml-auto"> <b class="h5">$@item.Product.Price</b> </div>
						
					</div>
				}
	
		
				<div class="d-flex align-items-center py-2">
					<div class="display-5">Total</div>
					<div class="ml-auto d-flex">
						<div class="text-primary text-uppercase px-3">usd</div>
						<div class="font-weight-bold">$@Model.CustOrderHeader.TotalPrice</div>
						
					</div>
				</div>
			</div>
	
			<div class="row pt-lg-3 pt-2 buttons mb-sm-0 mb-2">
				<div class="col-md-6">
					<a href="/Customer/Home/Index" class="btn text-uppercase">back to shopping></a>
				</div>
								
				<div class="col-md-6 pt-md-0 pt-3">
					<input type="submit" class="btn text-white ml-auto" value="Place Order"/>
					@*<div > <span class="fas fa-lock"></span> Place Order </div>*@
				</div>
			</div>
		</div>
	</div>
	</form>
			<div class="text-muted pt-3" id="mobile"> <span class="fas fa-lock"></span> Your information is save </div>
		</div>
	</div>
